{
  "manifest_version": 3,
  "name": "Text Wingman",
  "version": "1.1",
  "description": "Generate replies with Gemini on WhatsApp / Instagram Web.",
  "permissions": ["storage", "scripting", "activeTab", "clipboardWrite"],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*",
    "https://web.whatsapp.com/*",
    "https://www.instagram.com/*"
  ],
  "background": { "service_worker": "background.js" },
  "options_page": "options.html",
  "commands": {
    "toggle_panel": {
      "suggested_key": { "default": "Ctrl+Shift+W" },
      "description": "Toggle Text Wingman panel"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://web.whatsapp.com/*",
        "https://www.instagram.com/*"
      ],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": { "48": "icon48.png" }
}

